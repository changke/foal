    "@foal/core": "^4.0.0"
  },
  "devDependencies": {
    "@types/mocha": "10.0.1",
    "@types/node": "18.11.9",
    "graphiql": "~3.0.5",
    "mocha": "~10.2.0",
    "react": "~18.1.0",
    "react-dom": "~18.1.0",
